<div class="container">
  <div class="row">
    <div class="col">
      <h1>Burger Bar</h1>
      <hr />
    </div>
  </div>
  <div class="row">
    {{!-- section 1 --}}
    <div class="col-md-4 p-2">
      <img src="/assets/burger.svg" alt="Burger" />
    </div>
    {{!-- section 2 --}}
    <div class="col-md-4 p-2">
      <h1 class="bg-danger p-2 text-center text-light">START HERE</h1>
      <br />
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Your Short Name:</label>
          <input type="text" class="form-control" id="ca" name="name" placeholder="'Sai' or 'Superman' works">
        </div>
        <br />
        <div>
          <h3>Burgers</h3>
          <hr />
          <input type="radio" class="btn-check" name="burgers" id="dark-11-outlined" autocomplete="off" value="11">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-11-outlined">The Classic</label>
          <input type="radio" class="btn-check" name="burgers" id="dark-12-outlined" autocomplete="off" value="12">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-12-outlined">Prime Time Suprime</label>
          <input type="radio" class="btn-check" name="burgers" id="dark-13-outlined" autocomplete="off" value="13">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-13-outlined">Thunder Cloud</label>
          <input type="radio" class="btn-check" name="burgers" id="dark-14-outlined" autocomplete="off" value="14">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-14-outlined">Impossible</label>
          <br /><br />
          <h3>Sides</h3>
          <hr />
          <input type="radio" class="btn-check" name="sides" id="dark-21-outlined" autocomplete="off" value="21">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-21-outlined">Sweet Potato</label>
          <input type="radio" class="btn-check" name="sides" id="dark-22-outlined" autocomplete="off" value="22">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-22-outlined">Green Salad</label>
          <br /><br />
          <h3>Drinks</h3>
          <hr />
          <input type="radio" class="btn-check" name="drinks" id="dark-31-outlined" autocomplete="off" value="31">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-31-outlined">Coke</label>
          <input type="radio" class="btn-check" name="drinks" id="dark-32-outlined" autocomplete="off" value="32">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-32-outlined">Diet Coke</label>
          <input type="radio" class="btn-check" name="drinks" id="dark-33-outlined" autocomplete="off" value="33">
          <label class="btn btn-outline-dark btn-sm mb-2" for="dark-33-outlined">Iced Tea</label>
          <br />
          <br />
          <h3>How would you like?</h3>
          <hr />
          <input type="radio" class="btn-check" name="devoured" id="success-outlined" autocomplete="off" value="1">
          <label class="btn btn-outline-success" for="success-outlined">In a Plate?</label>

          <input type="radio" class="btn-check" name="devoured" id="danger-outlined" autocomplete="off" value="0">
          <label class="btn btn-outline-danger" for="danger-outlined">In a Box?</label>
          <br /><br />
          <hr />
          <button type="submit" class="btn btn-primary submit">Add Order</button>
      </form>
      <br />
    </div>
  </div>
  {{!-- section 3 --}}
  <div class="col-md-4 p-2">
    <h1 class="bg-warning p-2 text-center text-light">PLACE IN ORDER</h1>
    <br />
    <ul class="list-group placeinList"></ul>
    <br />
    <br />
    <h1 class="bg-success p-2 text-center text-light">READY TO GO</h1>
    <br />
    <h3>To Go Orders</h3>
    <ul class="list-group">
      {{#each burgers}}
      {{#unless devoured}}
      {{> cats/cat-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
    <br />
    <br />
    <h3>Dine In Orders</h3>
    <ul class="list-group">
      {{#each burgers}}
      {{#if devoured}}
      {{> cats/cat-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

</div>